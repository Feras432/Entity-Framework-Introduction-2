@{
    ViewData["title"] = "Blogs";
}
@model List<Blog>
<table class="table">
    <thead class="table-primary">
    <td>#</td>
    <td>Name</td>
    <td>URL</td>
    <td></td>
    </thead>
    <tbody class="table">
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Id</td>
                <td>@blog.Name</td>
                <td>@blog.Url</td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary" type="button" onclick="location.href = '/Blog/AddBlog'">Add Blog</button>
